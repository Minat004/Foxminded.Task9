@model Student

@{
    ViewBag.Title = "Add new student";
    Layout = "_Layout";
}

<div class="mx-auto col-10 col-md-8 col-lg-6">
    
    <h2>Add new student</h2>

    <form method="post" asp-controller="Students" asp-action="Add">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row mb-2">
            <label asp-for="FirstName" class="col-sm-2 col-form-label">First name</label>
            <div class="col-sm-10">
                <input asp-for="FirstName" class="form-control" type="text"/>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row mb-2">
            <label asp-for="LastName" class="col-sm-2 col-form-label">Last name</label>
            <div class="col-sm-10">
                <input asp-for="LastName" class="form-control" type="text"/>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row mb-2">
            <label asp-for="GroupId" class="col-sm-2 col-form-label">Group</label>
            <div class="col-sm-10">
                <select asp-for="GroupId" class="form-select" asp-items="@Model.Groups"></select>
            </div>
        </div>
        <div class="d-flex flex-row-reverse">
            <a class="btn btn-outline-danger" asp-controller="" asp-action="">Cancel</a>
            <button type="submit" class="btn btn-primary mx-2">Save</button>
        </div>
    </form>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
