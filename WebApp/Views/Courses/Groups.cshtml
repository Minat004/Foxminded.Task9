@model List<Group>

@{
    ViewBag.Title = Model[0].Course!.Name;
    Layout = "_Layout";
}

<h2>@Model[0].Course!.Name</h2>

<table class="table">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Course</th>
        <th scope="col"></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var group in Model)
    {
        <tr>
            <th scope="row">@group.Id</th>
            <td>@group.Name</td>
            <td>@group.Course!.Name</td>
            <td>
                <div class="d-flex flex-row">
                    <a class="btn btn-primary" asp-controller="Groups" asp-action="Students" asp-route-groupId="@group.Id">Students</a>
                    <a class="btn btn-primary mx-2" asp-controller="Groups" asp-action="Edit" asp-route-groupId="@group.Id">Edit</a>
                    @using (Html.BeginForm("Delete", "Groups", new { groupId = group.Id }))
                    {
                        <button type="button" class="btn btn-danger">Delete</button>
                    }
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>

<div id="btn-fix">
    <a class="btn btn-primary btn-square-md rounded-circle" asp-controller="Groups" asp-action="Add">
        <h1><i class="bi bi-person-plus-fill"></i></h1>
    </a>
</div>