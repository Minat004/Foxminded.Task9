@model Group

@{
    ViewBag.Title = "Add new group";
    Layout = "_Layout";
}

<div class="mx-auto col-10 col-md-8 col-lg-6">
    
    <h2>Add new group</h2>

    <form method="post" asp-controller="Groups" asp-action="AddGroup">
        <div class="form-group row mb-2">
            <label asp-for="Name" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" type="text"/>
            </div>
        </div>
        <div class="form-group row mb-2">
            <label asp-for="CourseId" class="col-sm-2 col-form-label">Course</label>
            <div class="col-sm-10">
                <select asp-for="CourseId" class="form-select" asp-items="@Model.Courses"></select>
            </div>
        </div>
        <div class="d-flex flex-row-reverse">
            <a class="btn btn-outline-danger" asp-controller="" asp-action="">Cancel</a>
            <button type="submit" class="btn btn-primary mx-2">Save</button>
        </div>
    </form>
    
</div>
