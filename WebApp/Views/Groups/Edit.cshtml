@model Group

@{
    ViewBag.Title = "Edit " + Model.Name;
    Layout = "_Layout";
}

<div class="mx-auto col-10 col-md-8 col-lg-6">
    
    <h2>@Model.Name</h2>

    <form method="post" asp-controller="Groups" asp-action="EditGroup">
        <div class="form-group row mb-2">
            <label asp-for="Id" class="col-sm-2 col-form-label">Id</label>
            <div class="col-sm-10">
                <input asp-for="Id" readonly class="form-control" type="text" placeholder="@Model.Id"/>
            </div>
        </div>
        <div class="form-group row mb-2">
            <label asp-for="Name" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" type="text" value="@Model.Name"/>
            </div>
        </div>
        <div class="form-group row mb-2">
            <label class="col-sm-2 col-form-label">Course</label>
            <div class="col-sm-10">
                <input readonly class="form-control" type="text" placeholder="@Model.Course!.Name"/>
            </div>
        </div>
        <div class="d-flex flex-row-reverse">
            <a class="btn btn-outline-danger" asp-controller="" asp-action="">Cancel</a>
            <button type="submit" class="btn btn-primary mx-2">Save</button>
        </div>
    </form>
    
</div>
