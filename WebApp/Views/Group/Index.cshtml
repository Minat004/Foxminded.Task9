@model List<Group>

@{
    ViewBag.Title = "Groups";
    Layout = "_Layout";
}

<h2>Groups</h2>

<table class="table">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Course</th>
        <th scope="col"></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var group in Model)
    {
        <tr>
            <th scope="row">@group.Id</th>
            <td>@group.Name</td>
            <td>@group.Course!.Name</td>
            <td>
                <a class="btn btn-primary" asp-controller="Group" asp-action="Students" asp-route-groupId="@group.Id">Students</a>
                <button type="button" class="btn btn-primary">Edit</button>
                <button type="button" class="btn btn-danger">Delete</button>
            </td>
        </tr>
    }
    </tbody>
</table>

<div id="btn-fix">
    <button class="btn btn-primary btn-square-md rounded-circle"><h1><i class="bi bi-person-plus-fill"></i></h1></button>
</div>
