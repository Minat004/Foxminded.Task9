@model List<Course>

@{
    ViewBag.Title = "Courses";
    Layout = "_Layout";
}

<h2>Courses</h2>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <th scope="row">@course.Id</th>
                <td>
                    <a asp-controller="Course" asp-action="Groups" asp-route-id="@course.Id">@course.Name</a>
                </td>
                <td>@course.Description</td>
            </tr>
        }
    </tbody>
</table>