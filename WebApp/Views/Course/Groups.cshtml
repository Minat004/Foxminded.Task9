@model List<Group>

@{
    ViewBag.Title = Model[0].Course!.Name;
    Layout = "_Layout";
}

<h2>@Model[0].Course!.Name</h2>

<table class="table">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Course</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var group in Model)
    {
        <tr>
            <th scope="row">@group.Id</th>
            <td>@group.Name</td>
            <td>@group.Course!.Name</td>
            <td>
                <a class="btn btn-primary" asp-controller="Course" asp-action="Groups" asp-route-courseId="">Students</a>
                <button type="button" class="btn btn-primary">Edit</button>
                <button type="button" class="btn btn-danger">Delete</button>
            </td>
        </tr>
    }
    </tbody>
</table>